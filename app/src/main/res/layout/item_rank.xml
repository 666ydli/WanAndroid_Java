<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingStart="14dp"
    android:paddingEnd="14dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/bg_rank_row_soft"
    android:foreground="?attr/selectableItemBackground"
    android:minHeight="56dp">

    <!-- 排名 -->
    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="#6B7280"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/bg_rank_badge_default" />

    <!-- 用户名 -->
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:includeFontPadding="false"
        android:textColor="#1E2430"
        android:textSize="15sp"
        android:letterSpacing="0.01"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- 积分 -->
    <TextView
        android:id="@+id/tv_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="#F59E0B"
        android:textSize="14sp"
        android:textStyle="bold"
        android:letterSpacing="0.01"
        android:drawablePadding="6dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@drawable/bg_coin_pill"
        android:drawableStart="@android:drawable/star_big_on" />
</LinearLayout>
